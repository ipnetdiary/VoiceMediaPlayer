{
  "manifest_version": 2,

  "name": "Voice Controlled Media Player",
  "description": "Audio voice controlled",
  "version": "1.4",
  "options_page": "options.html",
  
  "browser_action": {
    "default_icon": "128.png",
	"default_title": "Audio Extension",
	"default_popup": "popup.html"
  },
  
	"icons": { "16": "16.png",
           "48": "48.png",
          "128": "128.png" },
		  
  "permissions": [
    "tabs",
	"file:///*",
	"notifications"
  ],
    "background": {
    "scripts": ["listener.js"],
    "persistent": true
  }
}